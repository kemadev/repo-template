name: Workflows - CI

on:
  schedule:
    # Each day at 3:00 AM
    - cron: 0 3 * * *
  pull_request:
    types:
      - opened
      - synchronize
      - reopened
      - unlocked
    paths:
      - .{{ vcs_provider }}/workflows/*
  workflow_dispatch: {}

permissions:
  contents: read

jobs:
  workflow-lint:
    name: Workflows lint
    permissions:
      contents: read
    runs-on: ubuntu-latest
    container:
      image: ghcr.io/kemadev/ci-cd-runner:latest
      credentials:
        {% raw %}
        username: ${{ github.actor }}
        password: ${{ secrets.github_token }}
        {% endraw %}
    steps:
      - name: Checkout
        id: checkout
        uses: actions/checkout@v4
      - name: Workflows lint
        id: workflow-lint
        run: kema-runner gha
